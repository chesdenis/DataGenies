@inject IClusterConfigPageService clusterConfigPageService
@inject IOptions<DG.Core.Model.ClusterConfig.Host> currentHost


<AvailableApplicationTypes AvailableApplications="this.AvailableApplications"/>

<div class="card" style="width: 100%;">
    <div class="card-header">
        <h4> Cluster Definition:</h4>
        <p><b>HashMd5: </b>@this.ClusterConfig.ClusterDefinition.HashMD5, <b>Last update time: </b>@this.ClusterConfig.ClusterDefinition.LastUpdateTime</p>

        <ul class="nav nav-tabs card-header-tabs">
            @foreach (var key in this.elementsSettings.Keys)
            {
                <li class="nav-item">
                    <a class="nav-link" aria-selected="@this.elementsSettings[key][1]" @onclick="(async () => await Expand(key))" href="" @onclick:preventDefault>@key </a>
                </li>
            }
        </ul>
    </div>

    <div class="card-body tab-content">
        <div class="tab-pane fade @this.elementsSettings["Hosts"][0]">
            <HostsCard  Hosts="this.ClusterConfig.ClusterDefinition.Hosts"/>
        </div>
        <div class="tab-pane fade @this.elementsSettings["Type sources"][0]">
            <div class="card-body">
                <ApplicationTypeSourcesCard ClusterConfig="this.ClusterConfig" />
            </div>
        </div>
        <div class="tab-pane fade @this.elementsSettings["Instances"][0]">
         <CascadingValue Value="this.AvailableApplications">
            <CascadingValue Value="this.ClusterConfig.ClusterDefinition.Hosts">
            <ApplicationInstancesCard ClusterConfig="this.ClusterConfig"/>
            </CascadingValue>
             </CascadingValue>
        </div>
    </div>
    <EditForm Model="@this.ClusterConfig" OnValidSubmit="@(async()=> await this.clusterConfigPageService.WriteConfig(ClusterConfig, currentHost))">
        <div class="row">
            <div class="col-3">
                <button class="btn btn-outline-primary" type="submit">Update config</button>
            </div>
            <div class="col-3">
                <button class="btn btn-outline-primary" type="reset">Cancel changes</button>
            </div>
        </div>
    </EditForm>
</div>
